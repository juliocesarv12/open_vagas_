<section class="ftco-section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 text-center mb-5">
        <h2 class="heading-section">Open Vagas</h2>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <div class="login-wrap p-4 p-md-5">
          <div class="icon d-flex align-items-center justify-content-center">
            <span class="bi bi-people"></span>
          </div>
          <h3 class="text-center mb-">Tem uma conta?</h3>
          <div class="">
            <%= render "devise/shared/links" %>
          </div>
          <hr>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.input :email, 
                          required: false, 
                          autofocus: true, 
                          input_html: { autocomplete: "email", class: "form-control rounded-left" } %>
            </div>
            <div class="form-group">
              <%= f.input :password, 
                          required: false, 
                          input_html: { autocomplete: "current-password", class: "form-control rounded-left" } %>
            </div>
            <div class="form-group d-flex justify-content-between align-items-center">
              <div class= "container">
                <div class="row justify-content-center">
                <div class="col-6">
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                </div>
                <div class="col-6">
                  <%= link_to "Esqueceu a senha?", new_password_path(resource_name) %>
                </div>
                <div>
                  <%= f.button :submit, "Iniciar SessÃ£o", class: "btn btn-primary rounded submit p-3 px-5 mt-2" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </section>
