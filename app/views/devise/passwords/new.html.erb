<section class="ftco-section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 text-center mb-5">
        <h2 class="heading-section">Esqueceu sua senha?</h2>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <div class="login-wrap p-4 p-md-5">
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs">
              <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", class: "form-control rounded-left" } %>
            </div>
          <%= render "devise/shared/links" %>
            <div >
              <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary rounded submit p-3 px-5 mt-2" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</section>
