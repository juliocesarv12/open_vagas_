<section class="ftco-section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 text-center mb-5">
        <h2 class="heading-section">Change your password</h2>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <div class="login-wrap p-4 p-md-5">
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= f.error_notification %>
            <%= f.input :reset_password_token, as: :hidden %>
            <%= f.full_error :reset_password_token %>
            <div class="form-inputs">
              <%= f.input :password,
                label: "New password",
                required: true,
                autofocus: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "Nova Senha",class: "form-control rounded-left" } %>
              <%= f.input :password_confirmation,
                label: "Confirm your new password",
                required: true,
                input_html: { autocomplete: "Confirme a Nova Senha",class: "form-control rounded-left" } %>
            </div>
            <%= render "devise/shared/links" %>
            <div >
              <%= f.button :submit, "Alterar senha", class: "btn btn-primary rounded submit p-3 px-5 mt-2" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</section>
